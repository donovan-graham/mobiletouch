<button {{action 'toggleEditMode'}}>Edit mode</button>

<div class="list-container no-select">
{{#each item in items}}
  <div class="list-item">
    
    <div class="list-check">
      <input type="checkbox" />
    </div>

    <pan-item width=200 duration=200>
      {{item.fullName}}    
    </pan-item>

    <div class="list-item-option">
      {{fa-icon "camera" size="lg"}}
      {{fa-icon "edit" size="lg"}}
      {{fa-icon "envelope" size="lg"}}
      {{fa-icon "flag-o" size="lg"}}  
      {{fa-icon "heart" size="lg"}}
      {{fa-icon "comment-o" size="lg"}}
      {{fa-icon "cloud-download" size="lg"}}
    </div>
  </div>

{{/each}}
</div>
